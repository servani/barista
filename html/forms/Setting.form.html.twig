{% extends 'base.backend.html.twig' %}

{% block section %}
	{% set action = edit ? 'admin/update/' ~ entityName ~ '/' ~ entity.id : 'admin/create/' ~ entityName %}
	{% include 'form.header.widget.html.twig' with { title: 'Opciones' } %}
	<div id="form">
		<form action="{{ url(action) }}" method="POST" novalidate>
			<div class="row">
				<div class="col-md-4">
					{% include 'form.input.widget.html.twig' with {
						label: 'Nombre',
						value: entity.name, name: 'Name',
						required: 'required'
					} %}
				</div>
			</div>
			<div class="row">
				<div class="col-md-4">
					{% include 'form.input.widget.html.twig' with {
						label: 'Valor',
						value: entity.value, name: 'Value',
						required: 'required'
					} %}
				</div>
			</div>
			{% include 'form.buttons.widget.html.twig' with { deletevalue: entity.username } %}
		</form>
	</div>
{% endblock %}

