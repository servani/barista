{% extends 'base.backend.html.twig' %}
{% block section %}
<div id="form">
	<form action="{{ url('admin/settings') }}" method="POST" novalidate>
		<div class="row">
			<div class="col-sm-12">
				{% if success %}
					<div role="alert" data-alert="" class="alert alert-dismissible alert-success"><button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button><strong>{{ "now"|date("H:i:s") }} </strong> Opciones actualizadas exitosamente.</div>
				{% endif %}
			</div>
		</div>
		<div class="row">
			<div class="col-sm-6">
				<div class="form-group">
					<label for="">Monto mínimo para pedir</label>
					<div class="row">
						<div class="col-md-3">
							<input type="text" required class="form-control" name="MontoMinimoPedido" value="{{ setting.montominimopedido }}">
							<div class="alert alert-danger error">Campo requerido</div>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label for="">Teléfono</label>
					<input type="text" class="form-control" name="ContactoTelefono" value="{{ setting.contactotelefono }}">
					<div class="alert alert-danger error">Campo requerido</div>
				</div>
				<div class="form-group">
					<label for="">Email</label>
					<input type="email" required class="form-control" name="ContactoMail" value="{{ setting.contactomail }}">
					<div class="alert alert-danger error">Email inválido</div>
				</div>
				<div class="form-group">
					<label for="">Facebook</label>
					<input type="text" required class="form-control" name="ContactoFacebook" value="{{ setting.contactofacebook }}">
					<div class="alert alert-danger error">Campo requerido</div>
				</div>
			</div>
		</div>
		<input type="submit" class="btn btn-success" value="Guardar" />
	</form>
</div>
{% endblock %}