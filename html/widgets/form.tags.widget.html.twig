{% set pvalue = [] %}
{% if value %}
	{% for v in value %}
		{% if (tagtype and v.tagtype == tagtype) or
			 not (tagtype or v.tagtype) %}
			{% set pvalue = pvalue + [v.name] %}
		{% endif %}
	{% endfor %}
	{% set value = pvalue|join(', ') %}
{% endif %}
{% if label %}
	<label>{{ label }}</label>
{% endif %}
<input class="autocomplete {{ class|default('')}}" id="{{ id|default('') }}" {{ required|default('') }} {{ autofocus|default('') }} type="{{ type|default('text') }}" name="{{ entityName }}[{{ name }}]" value="{{ value|default('')}}" placeholder="{{ value ? '' : placeholder|default(label) }}" />
<div class="hide availabletags">{{ tags|join(',') }}</div>
{% if errormsg or required %}
	<small class="error">{{ errormsg|default('Campo Requerido') }}</small>
{% endif %}
{% if example %}
	<span class="example">{{ example }}</span>
{% endif %}